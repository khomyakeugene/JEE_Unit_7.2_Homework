<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath*:restaurant-hibernate-context.xml"/>

    <bean class="com.company.restaurant.controllers.StateGraphRules" id="stateGraphRules">
        <property name="stateGraphDao" ref="stateGraphDao"/>
    </bean>


    <bean class="com.company.restaurant.controllers.MenuControllerImpl" id="menuController">
        <property name="menuDao" ref="menuDao"/>
    </bean>

    <bean class="com.company.restaurant.controllers.TableControllerImpl" id="tableController">
        <property name="tableDao" ref="tableDao"/>
    </bean>

    <bean class="com.company.restaurant.controllers.EmployeeControllerImpl" id="employeeController">
        <property name="jobPositionDao" ref="jobPositionDao"/>
        <property name="employeeDao" ref="employeeDao"/>
    </bean>

    <bean class="com.company.restaurant.controllers.CourseControllerImpl" id="courseController">
        <property name="courseCategoryDao" ref="courseCategoryDao"/>
        <property name="courseDao" ref="courseDao"/>
    </bean>

    <bean class="com.company.restaurant.controllers.OrderControllerImpl" id="orderController">
        <property name="orderDao" ref="orderDao"/>
        <property name="stateGraphRules" ref="stateGraphRules"/>
    </bean>

    <bean class="com.company.restaurant.controllers.WarehouseControllerImpl" id="warehouseController">
        <property name="ingredientDao" ref="ingredientDao"/>
        <property name="portionDao" ref="portionDao"/>
        <property name="warehouseDao" ref="warehouseDao"/>
    </bean>

    <bean class="com.company.restaurant.controllers.KitchenControllerImpl" id="kitchenController">
        <property name="cookedCourseDao" ref="cookedCourseDao"/>
    </bean>
    <!-- END OF DB-CONTEXT -->
</beans>